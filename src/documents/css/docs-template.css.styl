/* General styling */
docs-fonts ?= "OpenSans-Light", Arial, Helvetica;
docs-header-font ?= "RobotoSlab";
button-focus ?= 0.2rem solid #0000CB;
link-color ?= #0000CB;
link-hover-color ?= #fff;
link-hover-background ?= #0000CB;
site-width ?= 80rem; // the width of the entire site.
site-border ?= 0.1rem solid #ccc; // the borders that appear when site-width exceeded.

/* Main Content Area */
docs-body-background ?= #fff;
docs-content-note-border ?= #000;

/* Header and Footer */
header-footer-color ?= #000;
header-footer-background ?= #C5E0C5;
header-footer-link ?= #00444D;
header-footer-hover-color ?= #fff;
header-footer-hover-background ?= #00444D;
header-footer-focus ?= 0.2rem solid #00444D;
header-nav-link ?= #00444D;
header-nav-background ?= #e4eee4;
header-nav-hover-color ?= #e4eee4;
header-nav-hover-background ?= #00444D;
header-nav-border-top ?= 0.1rem dotted #fff;
header-nav-border-bottom ?= 0.1rem solid #cfcfcf;
header-menu-border ?= 0.2rem solid #cfcfcf;

/* Skip Links */
skip-color ?= #00444D;
skip-background ?= #C5E0C5;
skip-focus-outer-border ?= #00444D;
skip-focus-inner-border ?= #C5E0C5;
skip-hover-color ?= #C5E0C5;
skip-hover-background ?= #00444D;

/* Logo */
logo-color ?= #00444D;
logo-background ?= #C5E0C5;
logo-hover-color ?= #C5E0C5;
logo-hover-background ?= #00444D;
logo-focus ?= 0.2rem solid #00444D;
logo-font-path ?= "../fonts/logo";
logo-unicode ?= "\e91f";

/* Table of Contents Sidebar */
topics-background ?= #efefef;
topics-item-color ?= #000;
topics-active-color ?= #000;
topics-active-background ?= #efefef;
topics-item-hover-color ?= #fff;
topics-item-hover-background ?= #000;
topics-item-focus-border ?= 0.2rem solid #000;
topics-border-color ?= #cfcfcf; // right border of topics container

/* Table of Contents Hide-Show ribbon */
hideShow-background ?= #efefef;
hideShow-color ?= link-color;
hideShow-focus ?= 0.2rem solid link-color;
hideShow-hover-color ?= #efefef;
hideShow-hover-background ?= link-color;

/* Article Body area */
articleBody-color ?= #000;
articleBody-background ?= #fff;

figure-caption-border ?= #fff;
figure-background ?= #efefef;

/* Code Blocks */
code-block-background ?= #efefef;
code-block-border ?= 0.1rem dotted #ddd;
code-block-color ?= #000;
code-block-link-color ?= #0000CB;

/* Tables */
table-border-color ?= #e7e7e7;

/* UIO Table of Contents */
uio-topics-background ?= #efefef;

/* Mixins */
/* Generate the ribbon "tail" of the hideShow ribbon.
foregroundColor - the foreground colour of the contrast theme.
backgroundColor - the background colour of the contrast theme.*/
contrastThemeHideShowRibbonColor(foregroundColor, backgroundColor) {
    border-bottom: 2.10rem solid foregroundColor;
    border-right: 2.1rem solid backgroundColor;
    border-top: 2.11rem solid foregroundColor;
}

/* Generate the parts which are within a .fl-inverted-color class.
foregroundColor - the foreground colour of the contrast theme.
backgroundColor - the background colour of the contrast theme.*/
contrastThemeInverted(foregroundColor, backgroundColor) {
    button:focus,
    a:focus {
        outline: 0.2rem solid backgroundColor !important;
        background: foregroundColor;
    }

    button:hover {
        outline: none !important;
    }

    a:hover,
    a:hover *,
    .ui-state-focus,
    .ui-state-hover,
    .ui-state-active,
    .ui-state-active .docs-template-nav-mobile-icon,
    .ui-state-focus .docs-template-nav-mobile-icon,
    button:hover {
         background: backgroundColor !important;
         color: foregroundColor !important;
     }

     .docs-template-category-active {
         font-weight: bold !important;

         &.ui-state-focus,
         &.ui-state-focus span {
             color: backgroundColor !important;
             background: foregroundColor !important;
         }

         span:before {
             color: backgroundColor !important;
         }
     }
}

/* Generate the contrast theme styles for docs-template.
foregroundColor - the foreground colour of the contrast theme.
backgroundColor - the background colour of the contrast theme.*/
contrastTheme(foregroundColor, backgroundColor) {
    a:hover,
    a {
        transition: none;
    }

    a:focus {
        outline: 0.2rem solid foregroundColor !important;
    }

    .docs-template-topics-hideShow:before,
    a:hover,
    a:hover code,
    a:hover .docs-template-topics-item {
        background-color: foregroundColor !important;
        color: backgroundColor !important;
    }

    .fl-inverted-color {
        contrastThemeInverted(foregroundColor, backgroundColor)
    }

    .docs-template-topics-hideShow:after {
        contrastThemeHideShowRibbonColor(foregroundColor, backgroundColor)
    }

    figure a:hover {
        outline: none !important;
    }

    figure a:hover img {
        background-color: foregroundColor !important;
    }

    .docs-template-topics-hideShow a:hover {
        background-color: backgroundColor !important;
        color: foregroundColor !important;
    }
}

