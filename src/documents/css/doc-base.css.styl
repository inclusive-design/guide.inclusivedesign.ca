html body {
    font-size: 12px;
    font-size: 1.2rem;
    line-height: 1.6;
    font-family: doc-fonts;
}

.doc-base-container {
    min-width: 30rem;
}

.doc-base pre {
    white-space: pre-wrap;
}

.doc-base td {
    vertical-align: top;
}

.doc-base a {
    color: link-color;
    text-decoration: underline;
}

/* override foundation, so UIO's line-spacing will work */
.doc-base h1, .doc-base h2, .doc-base h3, .doc-base h4, .doc-base h5, .doc-base h6,
.doc-base p,
.doc-base table tbody tr td,
.doc-base table tr td,
.doc-base ul,
.doc-base dl {
   line-height: inherit;
}

.fl-prefsEditor-buttons button:focus,
.doc-base a:focus {
    outline: button-focus;
}

/* Skip links */
#skip {
    float: left;
    height: 0rem;
}

#skip a,
#skip a:hover,
#skip a:visited {
    height: 1px;
    left: -10000px;
    overflow: hidden;
    position: absolute;
    top: auto;
    width: 1px;
}

#skip a:active,
#skip a:focus {
    height: auto;
    position: static;
    width: auto;
}

/* Header and Footer */
.doc-base-header,
.doc-base-footer {
    background-color: header-footer-background;
    color: header-footer-color;
    font-family: doc-fonts;
}

.doc-base-header a,
.doc-base-footer a {
    color: header-footer-link;
}

.doc-base-header a:focus,
.doc-base-footer a:focus {
    outline: header-footer-focus;
}

.doc-base-header a:hover,
.doc-base-footer a:hover {
    color: header-footer-hover-color;
    background: header-footer-hover-background;
}

.doc-base-header {
    min-height: 7rem;
    font-size: 1.1rem;
    text-align: right;
    padding-right: 2rem;
    line-height: 2;
    max-width: 100%;
}

.doc-base-header a {
    text-decoration: none;
}

.doc-base-header .doc-base-logo {
    font-size: 1.6rem;
    letter-spacing: 0.2rem;
    margin-top: 2rem;
    text-align: left;
}

.doc-base-header .doc-base-logo a {
    padding: 1rem;
}

.doc-base-header .doc-base-logoText:before {
    font-family: "logo";
    content: "\e91f";
    font-size: 2rem;
    text-align: bottom;
    padding-right: 0.2rem;
}

.doc-base-header nav {
    margin-top: 1rem;
}

.doc-base-header nav a {
    color: header-nav-link;
    padding: 0.2rem;
    margin: 0 1rem;
}

.doc-base-category-active {
    border-bottom: header-active-category;
}

.doc-base-footer {
    padding-top: 2rem;
    font-size: 1.1rem;
    text-align: center;
    max-width: 100%;
}

.doc-base-footer p {
    font-size: 0.8rem;
