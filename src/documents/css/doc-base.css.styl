/* Main body area - contains sidebar and article, excludes header and footer */
.doc-base-mainBody {
    margin: 0;
    position: relative;
}

/* the article body */
.doc-base-articleBody  {
    padding: 5.5rem 2rem 6rem 4rem;
    min-height: 44rem;
    background: doc-articleBody;
    transition: width transitionTime;
}

.doc-base-articleBody p {
    font-size: 1.2rem;
}

.doc-base-articleBody a:hover {
    color: link-hover-color;
    background: link-hover-background;
}

.doc-base-articleBody pre code {
    font-weight: normal;
    border: code-block-border;
    border-radius: 0.2rem;
    padding: 0.8rem;
    margin-bottom: 1rem;
}

.doc-base-articleBody code {
    font-weight: normal;
    color: code-block-color;
    background-color: code-block-background;
    font-size: inherit;
}

.doc-base-articleBody code a,
.doc-base-articleBody a code {
    font-size: inherit;
    border-bottom: 0.1rem dotted code-block-link-color;
    color: code-block-link-color;
    background: 0;
}

.doc-base-articleBody table td {
    border: 1rem solid table-border-color;
}

/* Table of Contents */
.doc-base-TOC-container {
    background: toc-background;
    transition: width transitionTime;
    padding: 1.5rem;
    border-right: 0.2rem solid toc-border-color;
}

.doc-base-TOC-hideShow {
    line-height: 2.3rem !important; // prevent UIO from changing this.
    padding: 0.5rem;
    margin-top: 1rem;
    min-width: 9rem;
    width: 9rem;
    background: toc-background;
}

.doc-base-TOC-hideShow:after {
    border-bottom: 2.3rem solid toc-background;
    border-right: 2.1rem solid doc-content-background;
    border-top: 2.2rem solid toc-background;
    content: "";
    position:absolute;
    right:0;
    display:block;
    top: 0;
}

.doc-base-TOC-hideShow a {
    margin-right: 0rem;
    margin-top: 0rem;
    background: toc-background;
    padding: 0.5rem;
    display: inline-block;
    width: 100%;
}

.doc-base-TOC-hideShow a:before {
    content: "\2630";
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
}

.doc-base-TOC {
    width: 100%;
    transition: width transitionTime;
}

.doc-base-TOC ul {
    list-style-type: none;
}

.doc-base-TOC li {
    padding: 0.6rem 0;
}

.doc-base-TOC .doc-base-category {
    font-family: 'OpenSans-Bold';
    margin-bottom: 1rem;
    font-weight: bold;
    font-size: 1.6rem;
}

.doc-base-TOC .doc-base-sectionName {
    font-weight: normal;
    font-size: 1rem;
    margin:0;
}

.doc-base-TOC .doc-base-TOC-item {
    padding: 0.2rem;
    border: none;
    color: toc-item-color;
    display:inline-block;
    width:100%;
}

.doc-base-TOC a:focus,
.doc-base-TOC a:hover {
    color: toc-item-hover-color;
    background: toc-item-hover-background;
    outline: toc-item-hover-border;
    text-decoration: none;
}

.doc-base-TOC .doc-base-TOC-item.doc-base-TOC-active {
    color: toc-active-color;
    background: toc-active-background;
}

// For medium screens and up.
@media only screen and (min-width: 40.063em) {
    .doc-base-articleBody {
        // set this padding so that the content and hide/show button do not
        // overlap.
        padding-left: 7rem;
    }
}

/* Hiding the ToC sidebar
To Hide, add .doc-base-hide-sidebar to <body> */
.doc-base-hide-sidebar {
    .doc-base-articleBody {
        width: 100%;
    }

    .doc-base-TOC {
        clip: rect(1px, 1px, 1px, 1px);
        height: 1px;
        overflow: hidden;
        position: absolute !important;
        width: 1px;
    }

    .doc-base-TOC-hideShow {
        position: relative;
        right: 0;
        z-index: 1;
    }

    .doc-base-TOC-container {
        padding: 0;
        width: 0;
        margin-top: 1.5rem;
        border-right: none;
    }
}

// For small screens.
@media only screen and (max-width: 40em) {
    /* When the sidebar is hidden, show the article. Otherwise, hide the article.
    */

    .doc-base-hide-sidebar .show-for-screenreader-small {
        /* Set width, height, clipping, overflow etc to default when something
        is to be visible. */
        clip: auto;
        height: auto;
        width: auto;
        overflow: visible;
        position: static;
    }

    .show-for-screenreader-small {
        /* Hide something when it is on a small screen, but still make it
        accessible to ATs. This is based on Foundation's style. */
        clip: rect(1px, 1px, 1px, 1px);
        height: 1px;
        width: 1px;
        overflow: hidden;
        position: absolute !important;
    }

    .doc-base-hide-sidebar .doc-base-TOC-hideShow a {
        float: left;
    }
}


